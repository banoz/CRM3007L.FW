{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake Configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-B",
                "build",
                "-G",
                "Ninja"
            ],
            "group": "build",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Build OB38R16T1 Firmware",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "clear": true
            },
            "dependsOn": [
                "CMake Configure"
            ]
        },
        {
            "label": "Clean Build",
            "type": "shell",
            "command": "Remove-Item",
            "args": [
                "-Recurse",
                "-Force",
                "-Path",
                "build",
                "-ErrorAction",
                "SilentlyContinue"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Rebuild Firmware",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Clean Build",
                "Build OB38R16T1 Firmware"
            ],
            "group": "build",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "clear": true
            }
        }
    ]
}
